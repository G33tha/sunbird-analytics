# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

POST   /content/metrics/usage/:contentId   @controllers.Application.contentUsageMetrics(contentId: String)
GET   /health   @controllers.Application.checkAPIhealth
POST   /content-to-vec/:contentId   @controllers.Application.contentToVec(contentId: String)
POST /recommendations @controllers.Application.recommendations
POST /content-to-vec/train/model @controllers.Application.contentToVecTrainModel
POST /recommendations/train/model @controllers.Application.recommendationsTrainModel
POST /dataproduct/run/:job @controllers.Application.runJob(job: String)
POST /dataproduct/replay/:job/:from/:to @controllers.Application.replayJob(job: String, from: String, to: String)

# Metrics APIs

POST /metrics/content-usage @controllers.Metrics.contentUsage
POST /metrics/content-popularity @controllers.Metrics.contentPopularity
POST /metrics/item-usage @controllers.Metrics.itemUsage
POST /metrics/genie-usage @controllers.Metrics.genieUsage
POST /list/content @controllers.Metrics.contentList